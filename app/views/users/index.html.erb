<div class="container">
	<h1 class="center">List of All User</h1>
	<div class="center">
		<%= will_paginate %>
		<% @users.each do |user| %>
		<ul class="listing">
			<div class="row">
				<div class="well col-md-4 col-md-offset-4">
					<li><%= link_to gravatar_for(user), user_path(user) %></li>
					<li class="article-title">
						<%= link_to user.username, user_path(user) %>
					</li>
					<li><small>
						<%= pluralize(user.articles.count, "article")if user.articles %>
					</small></li>
					<% if user.admin? %>
					<li class="alert alert-info">
						<small>
							<strong>
								ADMIN
							</strong>
						</small>
					</li>
					<% end %>
					<% if current_user && current_user.admin? && current_user.email != user.email%>
					<li>
						<%= link_to "Delete", user_path(user),method: :delete, data:{ confirm:'Are You Sure ?'}, class: "btn btn-xs btn-danger" %>
					</li>
					<% end %>
					
				</div>
			</div>
		</ul>
		<% end %>
		<%= will_paginate %>
	</div>
</div>
